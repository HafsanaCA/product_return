<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_return_list" model="ir.ui.view">
        <field name="name">stock.picking.return.list</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <list string="Return Pickings">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="picking_type_id"/>
                <field name="state"/>
                <field name="origin"/>
            </list>
        </field>
    </record>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">sale.picking.view.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="return_order" invisible="not return_order"/>
                <field name="return_order_pick" invisible="not return_order_pick"/>
                <field name="return_order_picking" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="sale_return_view_form" model="ir.ui.view">
        <field name="name">sale.return.view.form</field>
        <field name="model">sale.return</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="return_confirm" string="Confirm"
                            class="oe_highlight" type="object" invisible="not is_draft"/>
                    <button name="return_cancel" string="Cancel" type="object"
                            confirm="Are you sure you want to cancel this return order?"
                            invisible="is_draft"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object"
                                class="oe_stat_button" icon="fa-truck"
                                invisible="picking_count == 0">
                            <field name="picking_count" widget="statinfo"
                                   string="Return Picking"/>
                        </button>
<!--                        <button name="action_view_delivery" type="object"-->
<!--                                class="oe_stat_button" icon="fa-truck"-->
<!--                                invisible="delivery_count == 0">-->
<!--                            <field name="delivery_count" widget="statinfo"-->
<!--                                   string="Delivery Order"/>-->
<!--                        </button>-->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="sale_order" required="1" readonly="is_done"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="user_id" readonly="is_done"/>
                        </group>
                        <group>
<!--                            <field name="to_refund" readonly="is_confirm_or_done"/>-->
                            <field name="stock_picking" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Return Lines" name="return_lines">
                            <field name="return_line_ids" readonly="is_done">
                                <list editable="bottom">
                                    <field name="product_id" required="1"/>
                                    <field name="quantity" required="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Reason" name="reason_notes">
                            <group>
                                <field name="reason" readonly="is_done"/>
<!--                                <field name="note" readonly="is_confirm_or_done"/>-->
                            </group>
                        </page>
<!--                        <page string="Delivery Order" name="delivery_order">-->
<!--                            <field name="source_pick" widget="many2many_tags"-->
<!--                                   domain="[('origin', '=', sale_order.name)]"-->
<!--                                   help="Select specific delivery orders related to the sale order for this return."-->
<!--                                   readonly="is_confirm_or_done"/>-->
<!--                        </page>-->
                        <page string="Return Picking" name="return_picking">
                            <field name="stock_picking" mode="list" readonly="1"
                                   options="{'no_create': True, 'no_open': True}">
                                <list ref="product_return.view_stock_picking_return_list"/>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_return_view_list" model="ir.ui.view">
        <field name="name">sale.return.view.list</field>
        <field name="model">sale.return</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sale_order"/>
                <field name="partner_id"/>
                <field name="create_date"/>
                <field name="user_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>
    <record id="sale_return_view_search" model="ir.ui.view">
        <field name="name">sale.return.view.search</field>
        <field name="model">sale.return</field>
        <field name="arch" type="xml">
            <search>
                <field name="sale_order" string="Sale order"/>
                <field name="partner_id" string="Customer"/>
                <field name="product_id" string="Product"/>
                <filter string="Done" name="done"
                        domain="[('state', '=', 'done')]" help="Done order"/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status"
                            domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Sale Order" name="order"
                            context="{'group_by':'sale_order'}"/>
                    <filter string="Customer" name="customer"
                            domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter string="Product" name="product"
                            domain="[]" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_sale_return" model="ir.actions.act_window">
        <field name="name">Sale Return</field>
        <field name="res_model">sale.return</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sale_return_view_list"/>
    </record>

    <menuitem id="sale_return_menu"
              parent="sale.sale_menu_root"
              name="Return Orders"
              action="product_return.action_sale_return"/>
</odoo>