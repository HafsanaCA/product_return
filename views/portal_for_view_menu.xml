<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_my_home_return_orders_card_fa" name="My Account: Return Orders Card" inherit_id="portal.portal_my_home" customize_show="True" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/product_return/static/src/img/truck.svg'"/>
                <t t-set="title">Return Orders</t>
                <t t-set="url" t-value="'/my/return_orders'"/>
                <t t-set="text">Manage your return requests</t>
                <t t-set="placeholder_count" t-value="'return_count'"/>
            </t>
        </div>
    </template>

</odoo>
