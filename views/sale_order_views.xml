<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="sale_order_portal_return_button" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//section[@id='details']//table[@id='sales_order_table']/thead/tr" position="before">
            <div class="mt16 mb16" style="padding: 10px;">
                <a class="btn btn-primary"
                   style="color: white; margin-top: -90%; margin-left: 87%;"
                   t-attf-href="/sale_return_form/{{ sale_order.id }}">
                    <i class="fa fa-truck me-2" style="color: white;"/> Return
                </a>
            </div>
        </xpath>
    </template>
</odoo>

